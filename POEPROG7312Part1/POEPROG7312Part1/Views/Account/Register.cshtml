@model POEPROG7312Part1.Models.User
@{
    ViewBag.Title = "Register";
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4 text-center">Register</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>

            <div class="mt-3 text-center">
                <a asp-controller="Account" asp-action="Login">Already have an account? Login</a>
            </div>
        </form>
    </div>
</div>
