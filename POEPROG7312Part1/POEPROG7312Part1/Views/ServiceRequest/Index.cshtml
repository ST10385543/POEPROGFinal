@model List<POEPROG7312Part1.Models.ServiceRequest>

@{
    ViewData["Title"] = "Service Requests";
    var isAdmin = ViewBag.IsAdmin ?? false; 
}

<style>
    table.table {
        background-color: #fff !important;
        color: #000 !important;
    }

        table.table th,
        table.table td {
            background-color: #fff !important;
            color: #000 !important;
        }

    select.form-select {
        color: #000 !important;
    }
</style>

<h2>Service Requests</h2>

<form method="get" asp-action="Index" class="mb-3">
    <select name="statusFilter" onchange="this.form.submit()" class="form-select w-auto d-inline">
        <option value="">-- Filter by Status --</option>
        <option value="Acknowledged" selected="@("Acknowledged" == ViewBag.StatusFilter)">Acknowledged</option>
        <option value="In Progress" selected="@("In Progress" == ViewBag.StatusFilter)">In Progress</option>
        <option value="Resolved" selected="@("Resolved" == ViewBag.StatusFilter)">Resolved</option>
    </select>
</form>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Request ID</th>
            <th>Category</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in Model)
        {
            <tr>
                <td>@req.RequestID</td>
                <td>@req.Category</td>
                <td>@req.Description</td>
                <td>@req.Status</td>
                <td>
                    @if (isAdmin)
                    {
                        <form method="post" asp-action="UpdateStatus" class="d-inline">
                            <input type="hidden" name="requestId" value="@req.RequestID" />
                            <select name="newStatus" class="form-select form-select-sm d-inline w-auto">
                                <option value="Acknowledged" selected="@("Acknowledged" == req.Status)">Acknowledged</option>
                                <option value="In Progress" selected="@("In Progress" == req.Status)">In Progress</option>
                                <option value="Resolved" selected="@("Resolved" == req.Status)">Resolved</option>
                            </select>
                            <button type="submit" class="btn btn-primary btn-sm mt-1">Update</button>
                        </form>

                        <form method="post" asp-action="Delete" class="d-inline ms-2">
                            <input type="hidden" name="requestId" value="@req.RequestID" />
                            <button type="submit" class="btn btn-danger btn-sm mt-1"
                                    onclick="return confirm('Are you sure you want to delete this request?');">
                                Delete
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">No actions available</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="GraphView" class="btn btn-secondary">View Graph</a>
</div>