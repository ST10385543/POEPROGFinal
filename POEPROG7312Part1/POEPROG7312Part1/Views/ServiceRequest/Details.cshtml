@model POEPROG7312Part1.Models.ServiceRequest

@{
    ViewData["Title"] = "Service Request Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <h2 class="section-title">📝 Service Request Details</h2>

    <div class="card p-3">
        <p><strong>Request ID:</strong> @Model.RequestID</p>
        <p><strong>Category:</strong> @Model.Category</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Priority:</strong> @Model.Priority</p>
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>
