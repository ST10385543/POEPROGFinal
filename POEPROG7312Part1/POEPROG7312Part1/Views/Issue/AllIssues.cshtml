@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<POEPROG7312Part1.Models.Issue>

@{
    var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
    bool isAdmin = role == "Admin";
}

<h2 class="mb-4" style="color: white;">All Issues</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div style="background-color: white; padding: 20px; border-radius: 10px;">
    <table class="table table-bordered table-striped table-hover mb-0">
        <thead class="table-dark">
            <tr>
                <th>Location</th>
                <th>Category</th>
                <th>Description</th>
                <th>Attachment</th>
                <th>Status</th>
                @if (isAdmin)
                {
                    <th>Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var issue in Model)
            {
                <tr>
                    <td>@issue.Location</td>
                    <td>@issue.Category</td>
                    <td>@issue.Description</td>
                    <td>
                        @if (isAdmin)
                        {
                            if (!string.IsNullOrEmpty(issue.AttachmentPath))
                            {
                                <a class="btn btn-sm btn-outline-primary"
                                   href="@Url.Action("GetIssueAttachment", "Issue", new { fileId = issue.AttachmentPath })">
                                    Download
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">No file</span>
                            }
                        }
                        else
                        {
                            @if (!string.IsNullOrEmpty(issue.AttachmentPath))
                            {
                                <span class="text-muted">Attachment available</span>
                            }
                            else
                            {
                                <span class="text-muted">No file</span>
                            }
                        }
                    </td>
                    <td>
                        @if (isAdmin)
                        {
                            <form asp-action="UpdateStatus" asp-controller="Issue" method="post" class="d-flex">
                                <input type="hidden" name="id" value="@issue.Id" />
                                <select name="status" class="form-select form-select-sm me-2">
                                    <option value="New" selected="@(issue.Status == "New")">New</option>
                                    <option value="Viewed" selected="@(issue.Status == "Viewed")">Viewed</option>
                                    <option value="In Progress" selected="@(issue.Status == "In Progress")">In Progress</option>
                                    <option value="Request Sent">Request Sent</option>
                                    <option value="Resolved" selected="@(issue.Status == "Resolved")">Resolved</option>
                                </select>
                                <button type="submit" class="btn btn-sm btn-success">Update</button>
                            </form>
                        }
                        else
                        {
                            @issue.Status
                        }
                    </td>
                    @if (isAdmin)
                    {
                        <td>
                            <form asp-action="DeleteIssue" asp-controller="Issue" method="post" onsubmit="return confirm('Are you sure you want to delete this issue?');">
                                <input type="hidden" name="id" value="@issue.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
